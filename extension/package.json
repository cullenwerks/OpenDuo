{
  "name": "openduo",
  "displayName": "OpenDuo",
  "description": "GitLab Duo Agentic Chat for Federal Enterprise",
  "version": "0.1.0",
  "publisher": "openduo",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/cullen.guimond/openduo.git"
  },
  "license": "MIT",
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "openduo.openChat",
        "title": "OpenDuo: Open Chat"
      },
      {
        "command": "openduo.configurePat",
        "title": "OpenDuo: Configure PAT"
      }
    ],
    "configuration": {
      "title": "OpenDuo",
      "properties": {
        "openduo.gitlabUrl": {
          "type": "string",
          "default": "",
          "description": "GitLab instance URL (e.g. https://gitlab.example.com)"
        },
        "openduo.chatProvider": {
          "type": "string",
          "enum": ["rest", "graphql"],
          "enumDescriptions": [
            "REST endpoint (/api/v4/chat/completions) — for self-managed GitLab EE instances",
            "GraphQL + ActionCable WebSocket — for GitLab.com"
          ],
          "default": "rest",
          "description": "Which GitLab Duo Chat API to use. Use 'rest' for self-managed EE, 'graphql' for GitLab.com."
        }
      }
    }
  },
  "scripts": {
    "build": "node esbuild.config.js",
    "watch": "node esbuild.config.js --watch",
    "test": "vitest run",
    "prepackage": "cd .. && cargo build --release -p openduo-server && mkdir -p extension/bin && cp target/release/openduo-server.exe extension/bin/",
    "package": "npm run build && vsce package"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "^3.7.1",
    "esbuild": "^0.20.0",
    "typescript": "^5.3.0",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  }
}
